.mainLayout

	>header
		padding 0 2em
		background-color lighten($secondary, 90%)

		ul
			display flex
			align-items center
			justify-content flex-end
			height $h-header
			border-bottom 1px solid $secondary
			
			li
				padding-right 1em

				a
					line-height 1em
					text-transform uppercase

				&:first-of-type
					flex 1 1 100%
					a
						span
							text-transform none
							display inline-block
							padding-left .8em
							color lighten($secondary, 40%)
							border-left 1px solid lighten($secondary, 60%)
							margin-left .8em
							transition color 400ms ease-out, border-color 500ms ease-out

						&:hover
							span
								color $primary
								border-color $primary

				&:last-of-type
					padding-right 0
