html
body
	margin 0
	padding 0

body
	background-color lighten($secondary, 90%)
	color $secondary

	*
		box-sizing border-box

	ul
		list-style none
		margin 0
		padding 0

	.hidden
		opacity 0
		position absolute
		pointer-events none
		margin 0
		padding 0
		height 0
		width 0

	.mainLayout
		>header
			position fixed
			top 0
			left 0
			right 0
			z-index 9

	.mainContent
		min-height 100vh
		padding-top $h-header
		width 100%

		.page
			width 100%
			display flex
			min-height calc(100vh - 60px)
			align-items flex-start
			justify-content center
			padding 2em
			>div
				width 100%

			&.home
				align-items center

	.row
		display flex
		flex-flow row wrap
		width 100%
		justify-content center
		max-width $max-width
		margin 1em auto

		.center
			flex 0 0 100%
			display flex
			flex-flow row nowrap
			align-items center
			justify-content center
			margin auto
			.link
				background-color lighten($secondary, 96%)
				width calc(33.33% - 2em)
				padding 1.5em
				margin-top 4em
				margin-right 2em
				text-align center
				line-height 1em
				font-size .8em

				&:last-child
					margin-right 0

				strong
					font-weight $normal
					color inherit
					text-transform lowercase
					display inline-block
					padding-right 1em
					margin-right 1em
					border-right 1px solid
					opacity .5


		.left
		.right
			flex 0 0 auto
			display flex
			flex-flow row nowrap
			align-items center

		.deco
			width 40%
			position relative
			padding 2em
			&::after
				content ''
				position absolute
				top calc(50% - 10vh)
				height 40%
				width 10vw
				background-color lighten($secondary, 96%)
				z-index -1
				animation decoIn 1800ms cubic-bezier(0,-0.8, 0, 0.97)

				@keyframes decoIn
					0%
						transform translateY(20px)
						height 0%
						width 0
						opacity 0
						top 50%

			&.left
				text-align right
				justify-content flex-end
				&::after
					right -5vw
			&.right
				text-align left
				justify-content flex-start
				&::after
					left -5vw
			video
			img
				max-width 100%
				height auto
				max-height calc(100vh - 150px)
				margin auto

		.text
			width 60%
			margin 0
			>div
				width 100%
			&.right
				justify-content flex-start
			&.left
				justify-content flex-end
		&.even
			.deco
				width 60%
			.text
				width 40%

		.left
			order 1
			&.text
				animation leftIn 1200ms cubic-bezier(0,-0.8, 0, 0.97)

				@keyframes leftIn
					0%
						transform translateX(-40px)
						opacity 0
					20%
						transform translateX(-40px)
						opacity 0
					80%
						transform translateY(0em)
						opacity 75%
					100%
						transform translateY(0em)
						opacity 1


		.right
			order 2
			&.text
				animation rightIn 1200ms cubic-bezier(0,-0.8, 0, 0.97)

				@keyframes rightIn
					0%
						transform translateX(40px)
						opacity 0
					20%
						transform translateX(40px)
						opacity 0
					80%
						transform translateY(0em)
						opacity 75%
					100%
						transform translateY(0em)
						opacity 1
	
	.projectMenu
		display flex
		align-items center
		justify-content space-between
		background-color lighten($secondary, 90%)

		li
			width calc(33.33% - 1em)
			text-align center
			height calc(100vh - 200px)
			display flex
			flex-flow row nowrap
			align-items stretch
			justify-content stretch
			transition height 200ms ease-in, width 200ms ease-out
			
			a
				width 100%
				display flex
				flex-flow row nowrap
				align-items center
				justify-content center
				line-height 1em
				background-color rgba($secondary, .4)
				font-family $display
				font-size 2em
				letter-spacing -.02em
				color white
				transition background-color 300ms ease-out
				&:hover
				&.active
					background-color rgba($primary, .5)

			&:first-child
			&:nth-child(2)
			&:nth-child(3)
				background-size cover
				background-position center
				background-repeat no-repeat
			&:first-child
				background-image $axon-cover
			&:nth-child(2)
				background-image $apsis-cover
			&:nth-child(3)
				background-image $gala-cover
			&.close-link
				position fixed
				top 9em
				right 2em
				z-index 99999999
				opacity 0
				pointer-events none
				transition opacity 300ms ease-out
				height ($font-size * 2)
				width ($font-size * 2)
				a
					position relative
					display block
					width 100%
					height 100%
					background-color transparent

					&::before
					&::after
						position absolute
						font-family $font
						text-transform lowercase
						content 'l'
						display block
						font-size $font-size*2.6
						color $secondary
						transition color 300ms ease-out

					&::before
						transform rotate(45deg)
						left .25em
						top .21em
					&::after
						transform rotate(-45deg)
						left .26em
						top .20em

					&:hover
						&::before
						&::after
							color $primary


	.selected + .projectMenu
		position fixed
		z-index 2
		width calc(100% - 4em)
		top $h-header
		padding-top 2em
		li
			height 30px
			width calc(10% - 1em)
			a
				font-size $font-size
				font-family $font
				text-transform uppercase
				letter-spacing $letter-sp
				&.active
					font-size 0
			&.close-link
				height ($font-size * 2)
				width ($font-size * 2)
				pointer-events auto
				opacity 1
				transition opacity 0 ease-out
				

	.gala + .projectMenu
		li
			&:nth-child(3)
				width calc(80% - 1em)

	.apsis + .projectMenu
		li
			&:nth-child(2)
				width calc(80% - 1em)
	.axon + .projectMenu
		li
			&:first-child
				width calc(80% - 1em)

	.project
		padding-top 4em


	.cvList
		li
			p
				em
				strong
				span
					display block
				em
					font-style normal
					color lighten($secondary, 60%)
				span
					font-size .9em
					color lighten($secondary, 40%)